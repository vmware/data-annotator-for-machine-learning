{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "rootDir": "../",
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2019", "es6", "DOM"],
    "mapRoot": "src",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["core-js", "node", "resize-observer-browser"]
  },
  "files": ["main.ts", "polyfills.ts"],
  "include": ["environments/*.*.ts"],
  "exclude": ["node_modules", "dist"]
}
