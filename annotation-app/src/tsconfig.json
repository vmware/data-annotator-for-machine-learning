{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "rootDir": "../",
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2019", "es6", "dom"],
    "mapRoot": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["core-js", "node"]
  },
  "files": [
    "main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
